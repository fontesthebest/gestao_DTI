{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "npm run migrate:prod && npm start",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/api/auth/me",
        "healthcheckTimeout": 100
    }
}