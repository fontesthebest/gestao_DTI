{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "backend/**"
        ]
    },
    "deploy": {
        "startCommand": "cd backend && npx prisma generate && npx prisma migrate deploy && npm start",
        "restartPolicyType": "ON_FAILURE"
    }
}